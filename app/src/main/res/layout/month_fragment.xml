<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"
    android:paddingTop="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/monthly_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MONTHLY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="25dp"
        android:textAlignment="center"
        android:gravity="center_horizontal" />
    <TextView
        android:id="@+id/name_of_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="October"
        android:textAllCaps="true"
        android:textSize="25dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/monthly_TV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal" />

        <ProgressBar
            android:id="@+id/progresbar_stats"
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:layout_constraintTop_toBottomOf="@id/name_of_month"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="30dp"
            android:indeterminate="false"
            android:max="100"
            android:progress="100"
            android:progressDrawable="@drawable/stats_full"/>
    

<TextView
    android:id="@+id/stats_kako"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/progresbar_stats"
    android:text="Ne znam kako :"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="25dp"
    />
<TextView
    android:id="@+id/stats_kako_1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toEndOf="@id/stats_kako"
    app:layout_constraintTop_toTopOf="@id/stats_kako"
    android:text="ne znam kako 1"
    android:layout_marginRight="25dp"
    android:paddingLeft="16dp"/>











    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_next_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:backgroundTint="@android:color/background_light"
        android:src="@drawable/icon_plus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>